/* components/tab/tab.wxss */
/* tab的样式设置 */
.top {
  position: fixed;
  left: 0px;
  right: 0px;
  top: 0px;
  width: 100%;
  height: 30px;
  margin-bottom: 20rpx;
  background-color: #ffffff;
}

.tab_bar {
  display: flex;
  box-shadow: 0 1px 5px rgba(0,0,0,.2), 0 2px 2px rgba(0,0,0,.14), 0 3px 1px -2px rgba(0,0,0,.12);

}

.tab_item {
  flex: 1;
  width: 50%;
  height: 20px;
  font-size: 14px;
  text-align: center;
  border-bottom: 3px solid #ffffff;
}

.tab_item_active {
  flex: 1;
  width: 50%;
  height: 20px;
  font-size: 14px;
  font-weight: bold;

  text-align: center;
  border-bottom: 6px solid #000000;
}