/* pages/detail/detail.wxss */
.detail-ontainer, .cover-img-wrapper, content { 
    width: 100%;
}

.content {
    padding: 10rpx 20rpx;
    padding-left: 20rpx;
    padding-right: 20rpx;
    margin-left: 20px;
    margin-right: 20px;
}

.scene-name {
    font-size: 24px;
    font-weight: bold;
    margin-top: 20px;
}

.scene-intro {
    margin: 20px 0px;
    font-size: 14px;
    color: #616161;
}

.scene-info {
    display: flex;
    font-size: 12px;
    color: #616161;
    margin: 10px 0px;
}

.scene-info .scene-tag {
    width: 50%;
}

.tag-icon {
    margin-right: 8px;
}

.scene-info .scene-location {
    width: 50%;
}

.image-item {
    width: 100%;
    height: 150px;
    margin: 10px 0px;
}