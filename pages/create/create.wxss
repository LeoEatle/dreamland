/* pages/create/create.wxss */
button[plain] {
  border: 0px;
}

page {
  background: #f5f5f5;
}

.create_page {
}


.form_block {
  display: block;
  padding: 10px;
  margin-top: 10px;
  background-color: #fff;
  flex-direction: column;
  width: 100%;
  font-size: 14px;
  border-bottom: 1px solid rgba(0,0,0,.12);
}

.form_block :last-child {
  border: 0px;
}

.title_label {
  width: 100%;
  font-size: 14px;
  font-weight: 500;
  min-height:1.4rem;
  line-height: 1.4rem;
  vertical-align: middle;
}

.flex_bottom {
  margin-top: 10px;
  width: 100%;
}

.scene_img {
  border-bottom: 0px;
}

.title_area {
  height: 80px;
}


.btn {
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 14px;

  width: 60%;
  height: 30px;
  margin: 20px auto;
  border-radius: 15px;
  background-color: #ffffff;
  box-shadow: 0 1px 5px rgba(0,0,0,.2), 0 2px 2px rgba(0,0,0,.14), 0 3px 1px -2px rgba(0,0,0,.12);

}

.empty_tip {
  text-align: center;
  margin-top: 100px;
  font-size: 16px;
}

/* 上传截图区域 */
.choose_imgs {
  margin-top: 10px;
  width: 100%;
  display: flex !important;
  align-items: center;
  flex-wrap: wrap;
  justify-content: flex-start;

}
.add_img {
  width: 60px;
  height: 60px;
  margin: 0px 10px;
  line-height: 60px;
  text-align: center;
  vertical-align: middle;
  font-weight: 800;
}

.thumbnail {
  width: 80px;
  height: 80px;
  margin: 0px 10px;
}

.thumbnail_img {
  width: 80px;
  height: 80px;
}