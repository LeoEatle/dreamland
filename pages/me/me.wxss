/* 使背景变灰 */
page {
  height: 100%;
}


/* tab的样式设置 */
.top {
  width: 100%;
  height: 30px;
  margin-bottom: 20rpx;
  background-color: #ffffff;
}

.tab_bar {
  display: flex;
  font-size: 500;
  box-shadow: 0 1px 5px rgba(0,0,0,.2), 0 2px 2px rgba(0,0,0,.14), 0 3px 1px -2px rgba(0,0,0,.12);

}

/* tab的样式设置 */
.top {
  position: fixed;
  top: 0px;
  width: 100%;
  height: 30px;
  margin-bottom: 20rpx;
  background-color: #ffffff;
}

.tab_bar {
  display: flex;
  /* box-shadow: 0 1px 5px rgba(0,0,0,.2), 0 2px 2px rgba(0,0,0,.14), 0 3px 1px -2px rgba(0,0,0,.12); */

}

.tab_item {
  flex: 1;
  width: 50%;
  height: 20px;
  font-size: 16px;
  text-align: center;
  border-bottom: 3px solid #ffffff;
}

.tab_item_active {
  flex: 1;
  width: 50%;
  height: 20px;
  font-size: 16px;
  font-weight: bold;

  text-align: center;
  border-bottom: 6px solid #ffeb3b;
}

/* 菜单的设置 */
.content {
  width: 100%;
}

.select_item {
  height: 40px;
  padding: 0 10px;
  line-height: 40px;
  font-size: 16px;
  vertical-align: middle;
  display: flex;
  background-color: #fff;

  margin-top: 10px;
  margin-bottom: 10px;

}

.select_icon {
  width: 20px;
}

.select_text {
  flex: 1;
  font-size: 16px;
  text-align: left;
  margin-left: 10px;
}

.select_arrow {
  width: 20px;
  margin-left: 10px;
}